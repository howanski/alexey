<div class="flex flex-wrap">
	{% for weather in dashboard_data.weather.getWeatherReadable(app.request.locale).daily|slice(0, 6) %}
		{% if weather.rain > 20  %}
			{% set icon_background = 'nord11' %}
		{% elseif weather.rain > 0  %}
			{% set icon_background = 'nord13' %}
		{% else %}
			{% set icon_background = 'nord10' %}
		{% endif %}
		{% set bottom_data = weather.temperature ~ ' Â°C' %}
		{% if weather.rain > 0  %}
			{% set bottom_data = bottom_data ~ ' (' ~ 'rain_or_snow'|localised('weather')|lower ~ ': ' ~ weather.rain ~ 'mm)' %}
		{% endif %}
		{% include 'card.html.twig' with {
            'iconClass': 'far fa-eye',
            'iconBg': icon_background,
            'iconHref': path('weather'),
            'iconCustomSrc': 'https://openweathermap.org/img/wn/' ~ weather.weather_icon ~ '@2x.png',
            'headerValue': weather.date|localisedTime('day', 'long'),
            'headerText': weather.weather,
            'bottomData': bottom_data
		} only %}
	{% endfor %}
</div>
