{% extends 'base.html.twig' %}

{% block title %}Alexey |
	{{ 'menu_record'|localised('weather') }}
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('alexey') }}
	{{ encore_entry_script_tags('linear-chart') }}
{% endblock %}

{% block pageContent %}
	<div class="d-sm-flex align-items-center justify-content-between mb-4">
		<h1 class="h3 mb-0 text-gray-400">{{ 'menu_record'|localised('weather') }}
			|
			<a href="{{ path('weather_settings') }}" class="fas fa-cog text-info"></a>
		</h1>
	</div>
	<div class="card shadow mb-4">
		<div class="card-header py-3">
			<h6 class="m-0 font-weight-bold text-primary">{{ 'hourly'|localised('weather') }}</h6>
		</div>
		<div class="card-body">
			<div class="chart-area">
				<div class="chartjs-size-monitor">
					<div class="chartjs-size-monitor-expand">
						<div class=""></div>
					</div>
					<div class="chartjs-size-monitor-shrink">
						<div class=""></div>
					</div>
				</div>
				<canvas
					style="display: block; width: 1041px; height: 320px;"
					class="chartjs-render-monitor chart-linear"
					data-chart-src="{{ path('weather_chart_data', {type: 'hourly'}) }}"
					data-chart-refresh="600"
					width="1041"
					height="320"
				></canvas>
			</div>
			<hr>
		</div>
	</div>
	<div class="card shadow mb-4">
		<div class="card-header py-3">
			<h6 class="m-0 font-weight-bold text-primary">{{ 'daily'|localised('weather') }}</h6>
		</div>
		<div class="card-body">
			<div class="chart-area">
				<div class="chartjs-size-monitor">
					<div class="chartjs-size-monitor-expand">
						<div class=""></div>
					</div>
					<div class="chartjs-size-monitor-shrink">
						<div class=""></div>
					</div>
				</div>
				<canvas
					style="display: block; width: 1041px; height: 320px;"
					class="chartjs-render-monitor chart-linear"
					data-chart-src="{{ path('weather_chart_data', {type: 'daily'}) }}"
					data-chart-refresh="3600"
					width="1041"
					height="320"
				></canvas>
			</div>
			<hr>
		</div>
	</div>
{% endblock %}
