<div class="w-full lg:w-6/12 xl:w-5/12 px-4">
	<div class="relative flex flex-col min-w-0 break-words bg-white rounded mb-6 shadow-lg">
		<div class="flex-auto p-4">
			<div class="flex flex-wrap">
				<div class="relative w-full pr-4 max-w-full flex-grow flex-1">
					<h5 class="text-blueGray-400 uppercase font-bold text-xs">
						{{ headerText }}
					</h5>
					<span class="font-semibold text-xl text-blueGray-700">
						{{ headerValue }}
					</span>
				</div>
				{% if iconClass is defined and iconBg is defined %}
					<div class="relative w-auto pl-4 flex-initial">
						<div class="text-white p-3 text-center inline-flex items-center justify-center w-12 h-12 shadow-lg rounded-full bg-{{ iconBg }}">
							<i class="{{ iconClass }}"></i>
						</div>
					</div>
				{% endif %}
			</div>
			<p class="text-sm text-blueGray-400 mt-4">
				{% if bottomData is defined %}
					{{ bottomData|raw }}
				{% endif %}
			</p>
		</div>
	</div>
</div>
