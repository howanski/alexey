{% extends 'base.html.twig' %}

{% block title %}Alexey | {{ 'app.network_machines'|trans }}
{% endblock %}

{% block pageContent %}
	<div class="d-sm-flex align-items-center justify-content-between mb-4">
		<h1 class="h3 mb-0 text-gray-400">{{ 'app.network'|trans }} ~> {{ 'app.network_machines'|trans }}</h1>
	</div>
	<div class="row">
		<div class="col-xl-12 col-lg-12">
			<div class="card shadow bg-dark mb-4">
				<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
					<h6 class="m-0 font-weight-bold text-primary">{{ 'app.network_machines.status'|trans }}</h6>
				</div>
				<div class="card-body">
					<table class="table">
						<thead>
							<tr>
								<th>Id</th>
								<th>Name</th>
								<th>Uri</th>
								<th>MAC</th>
								<th>Status</th>
								<th>Last seen</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for network_machine in network_machines %}
								<tr>
									<td>{{ network_machine.id }}</td>
									<td>{{ network_machine.name }}</td>
									<td>{{ network_machine.uri }}</td>
									<td>{{ network_machine.macAddress }}</td>
									<td>{{ network_machine.statusReadable }}</td>
									<td>{% if network_machine.lastSeen %} {{ network_machine.lastSeenReadable }} {% else %} Never seen {% endif %}</td>
									<td>
										{% if network_machine.canBeWoken %}
											<a href="{{ path('network_machine_wake', {'id': network_machine.id, 'backRoute': 'network_machine_index'}) }}" class="btn btn-sm btn-success">Wake</a>
										{% endif %}
										<a href="{{ path('network_machine_show', {'id': network_machine.id}) }}" class="btn btn-sm btn-success">Show</a>
										<a href="{{ path('network_machine_edit', {'id': network_machine.id}) }}" class="btn btn-sm btn-warning">Edit</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="6">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>

					<a class="btn btn-success" href="{{ path('network_machine_new') }}">Add machine</a>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
