{% extends 'base.html.twig' %}

{% block title %}Alexey | {{ 'menu_record'|localised('network_machines') }} | {{ network_machine.name }}{% endblock %}

{% block pageContent %}
	<div class="d-sm-flex align-items-center justify-content-between mb-4">
		<h1 class="h3 mb-0 text-gray-400">{{ 'menu_record'|localised('network') }} ~> <a href="{{ path('network_machine_index') }}" class="text-info">{{ 'menu_record'|localised('network_machines') }}</a> ~> #{{ network_machine.id }} - {{ network_machine.name }}</h1>
	</div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ network_machine.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ network_machine.name }}</td>
            </tr>
            <tr>
                <th>Uri</th>
                <td>{{ network_machine.uri }}</td>
            </tr>
            <tr>
                <th>MAC address</th>
                <td>{{ network_machine.macAddress }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <a href="{{ path('network_machine_index') }}" class="btn btn-success">{{ 'back'|localised }}</a>
        <a href="{{ path('network_machine_edit', {'id': network_machine.id}) }}" class="btn btn-warning">{{ 'edit'|localised }}</a>
        {{ include('network_machine/_delete_form.html.twig') }}
    </div>
{% endblock %}
