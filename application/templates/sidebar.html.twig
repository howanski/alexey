<ul
	class="navbar-nav bg-dark sidebar sidebar-dark accordion" id="accordionSidebar">

	<!-- Sidebar - Brand -->
	<a class="sidebar-brand d-flex align-items-center justify-content-center" href="/">
		<div class="sidebar-brand-icon">
			<i class="fas fa-laptop-house"></i>
		</div>
		<div class="sidebar-brand-text mx-3">Alexey
		</div>
	</a>

	<!-- Divider -->
	<hr	class="sidebar-divider my-0">

	<!-- Nav Item - Dashboard -->
	<li class="nav-item active">
		<a class="nav-link" href="/">
			<i class="fas fa-fw fa-tachometer-alt"></i>
			<span>Dashboard</span>
		</a>
	</li>
	{% for  topMenuKey, menuItem in alexeySideMenu() %}
		{% if menuItem.haveChildren %}
			<li class="nav-item">
				<a class="nav-link{% if not menuItem.isActive %} collapsed{% endif %}" href="#" data-toggle="collapse" data-target="#collapseTopMenu{{topMenuKey}}" aria-expanded="{% if menuItem.isActive %}true{% else %}false{% endif %}" aria-controls="collapseTopMenu{{topMenuKey}}">
					<i class="fas fa-fw {{menuItem.icon}}"></i>
					<span>{{menuItem.name}}</span>
				</a>
				<div id="collapseTopMenu{{topMenuKey}}" class="collapse{% if menuItem.isActive %} show{% endif %}" aria-labelledby="headingPages" data-parent="#accordionSidebar">
					<div class="bg-white py-2 collapse-inner rounded">
						{% for childMenuItem in menuItem.children%}
							{% if childMenuItem.isHeading %}
								<h6 class="collapse-header">{{childMenuItem.name}}</h6>
							{% elseif childMenuItem.isDivider %}
								<div class="collapse-divider"></div>
							{% else %}
								<a class="collapse-item" href="{{childMenuItem.destination}}">{{childMenuItem.name}}</a>
							{% endif %}
						{% endfor %}
					</div>
				</div>
			</li>
		{% elseif menuItem.isHeading %}
			<div class="sidebar-heading">{{menuItem.name}}</div>
		{% elseif menuItem.isDivider %}
			<hr class="sidebar-divider">
		{% else %}
			<li class="nav-item{% if menuItem.isActive %} active {% endif %}">
				<a class="nav-link" href="{{menuItem.destination}}">
					<i class="fas fa-fw {{menuItem.icon}}"></i>
					<span>{{menuItem.name}}</span>
				</a>
			</li>
		{% endif %}
	{% endfor %}

	<!-- Divider -->
	<hr	class="sidebar-divider d-none d-md-block">
	<!-- Sidebar Toggler (Sidebar) -->
	<div class="text-center d-none d-md-inline">
		<button class="rounded-circle border-0" id="sidebarToggle"></button>
	</div>
</ul>
