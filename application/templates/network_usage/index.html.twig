{% extends 'base.html.twig' %}

{% block title %}Alexey | Network Usage
{% endblock %}

{% block pageContent %}
	<div class="d-sm-flex align-items-center justify-content-between mb-4">
		<h1 class="h3 mb-0 text-gray-400">Network ~> Usage |
			<a href="{{ path('network_usage_settings') }}" class="fas fa-cog text-info"></a>
		</h1>
	</div>
	<table class="table table-dark">
		<thead>
			<tr>
				<th scope="col">Traffic left</th>
				<th scope="col">Optimal speed</th>
				<th scope="col">Billing window end</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>{{ data_current.trafficLeftReadable }}</td>
				<td>{{ data_current.transferRateLeftReadable }}</td>
				<td>{{ data_current.timeFrame.billingFrameEnd | date("Y.m.d H:i:s") }}</td>
			</tr>
		</tbody>
	</table>
{% endblock %}
